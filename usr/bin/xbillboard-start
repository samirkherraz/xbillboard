#!/bin/bash 
echo "---------------------------------------------------------------"
echo "                      CONFIGURATION CHECK"
echo "---------------------------------------------------------------"
/usr/bin/xbillboard-configure
echo "---------------------------------------------------------------"
echo "                            STARTUP"
echo "---------------------------------------------------------------"

@xset s noblank
@xset s off
@xset -dpms
unclutter -ilde 0.1 -root

unset GTK_IM_MODULE

/usr/bin/python2 /usr/bin/xbillboard/ >> ~/.xbillboard/run.log 2>&1
